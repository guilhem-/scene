---
# Copy this file to secrets.yml and fill in your values
# Then encrypt with: ansible-vault encrypt vars/secrets.yml

# AWS Credentials (if not using environment variables or AWS CLI profile)
# aws_access_key: "YOUR_AWS_ACCESS_KEY_ID"
# aws_secret_key: "YOUR_AWS_SECRET_ACCESS_KEY"

# OR use an AWS CLI profile name
# aws_profile: "default"

# AWS Configuration
aws_region: "eu-west-3"  # e.g., "eu-west-3", "us-east-1"
ec2_key_name: "scene_"

# Domain configuration (optional - leave empty for IP-only access)
domain_name: ""  # e.g., "scene.example.com"
route53_zone_id: ""  # e.g., "Z1234567890ABC"
letsencrypt_email: ""  # e.g., "admin@example.com"
